@model IEnumerable<CadFuncionarios.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem de Funcionários</h1>

<p>
    <a asp-action="Create">Novo Funcionário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CargoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAdmissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAlteracao)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.DataExclusao)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.UtilizaVT)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CargoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAdmissao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAlteracao)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.DataExclusao)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UtilizaVT)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Ver</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >Excluir</a>
                    @*<input type="submit" value="Delete" class="btn btn-danger" />*@
            </td>
        </tr>
}
    </tbody>
</table>
